#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Welcome to Tic Tac Toe."
puts "What kind of game you would like to play? 0, 1 or 2 players?"
input = gets.strip
if input == "0"
  new_game = Game.new(Players::Computer.new("X"), Players::Computer.new("O"))
  puts "Lets tart it!"
  new_game.board.display
  new_game.play
elsif input == "1"
  puts "Player 1 is X."
  new_game = Game.new(Players::Human.new("X"), Players::Computer.new("O"))
  puts "Lets start it!"
  new_game.board.display
  new_game.play
elsif input == "2"
  puts "Player 1 is X."
  new_game = Game.new
  puts "Lets start it!"
  new_game.board.display
  new_game.play
end
